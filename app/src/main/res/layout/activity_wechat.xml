<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WechatActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你好，为了获取更好的服务"
        android:textColor="#ff6600"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请登录伴米旅行"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_180"
            android:id="@+id/ed_phone"
            android:hint="请输入手机号"
            android:drawableLeft="@mipmap/phone"
            />
        <Button
            android:text="短信验证码"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/code"
            android:background="@mipmap/button_unavailable"
            android:layout_marginTop="@dimen/dp_180"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wechat2"
        android:text="微信登录"
        android:textColor="#00EC00"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_5"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:text="登录或注册即同意伴米旅行"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dp_80"
            />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textSize="15sp"
            android:layout_toRightOf="@id/txt"
            android:textColor="#ff6600"
            />
    </RelativeLayout>

</LinearLayout>